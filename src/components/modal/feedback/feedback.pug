+modal({
	id: 'modal-feedback',
	mod: 'modal-feedback',
	title: 'Отправить сообщение',
	header: true
})
	form.bv-form.modal-feedback-form
		+input({
			label: 'ФИО',
			small: false,
			required: true,
			placeholder: false,
		})(
			data-bv-message='Укажите Ваше ФИО',
			required)
		+input({
			label: 'Телефон',
			small: false,
			placeholder: false,
			required: true,
		})(type='tel',
			pattern='\\+7 \\([0-9]{3}\\) [0-9]{3}-[0-9]{2}-[0-9]{2}',
			placeholder='Телефон',
			data-bv-notempty-message="Это обязательное поле",
			data-bv-regexp-message="Телефон введен некорректно"
			required)
		+textarea({
			label: 'Сообщение',
			required: true,
			small: false,
			placeholder: 'Сообщение',
		})(
			data-bv-notempty-message="Это обязательное поле",
			required)
		h1 ТЕТ РЕКАПЧА(УДАЛИТЬ НА ПРОДАКШЕНЕ)
		button.btn.btn-primary.w100p(type='submit' aria-label='ОТправить') ОТправить
