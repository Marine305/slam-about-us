mixin lazy-img(args={})
	//-
		+lazy-img({
			img: IMGSRC,
			placeholder: pixel,
			img_mod: IMGCLASS,
			wrap_mod: WRAPCLASS
			link: false,
			aria_label: false,
		})
	if (args.link)
		a.lazy-img-wrap(href='#' class= args.wrap_mod aria-label= args.aria_label)&attributes(attributes)
			img.lazy-img(class= args.img_mod, src= pixel, data-src=args.img, alt='img')
			block
	else
		span.lazy-img-wrap(class= args.wrap_mod)&attributes(attributes)
			img.lazy-img(class= args.img_mod, src= pixel, data-src=args.img, alt='img')
			block
